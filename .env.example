# Kanban Board - Environment Variables
# Copy this file to .env and fill in your values

# ================================================
# REQUIRED - Authentication
# ================================================

# Password for UI login (single password, no username)
# Used when accessing the web interface
KANBAN_PASSWORD=your-secure-password-here

# API key for programmatic access (Bearer token)
# Used by Clawdbot and other API clients
# Generate with: openssl rand -hex 32
KANBAN_API_KEY=your-api-key-here

# Secret for signing JWT tokens
# Generate with: openssl rand -hex 64
JWT_SECRET=your-jwt-secret-here

# ================================================
# OPTIONAL - Server Configuration
# ================================================

# Port to run the server on (default: 3000)
PORT=3000

# Node environment (production/development)
NODE_ENV=production

# Database path (inside container, mapped to volume)
# Usually no need to change this
DB_PATH=/data/kanban.db

# ================================================
# OPTIONAL - Session Settings
# ================================================

# JWT token expiry (default: 7 days)
# Format: https://github.com/vercel/ms
JWT_EXPIRY=7d

# Cookie settings
COOKIE_SECURE=true   # Set to false if not using HTTPS
COOKIE_SAME_SITE=lax # strict, lax, or none

# ================================================
# QUICK SETUP COMMANDS
# ================================================
# Generate secure values:
#
# KANBAN_PASSWORD:
#   openssl rand -base64 24
#
# KANBAN_API_KEY:
#   openssl rand -hex 32
#
# JWT_SECRET:
#   openssl rand -hex 64
